  #main-container
    #content-container
      ul#project-list.list-unstyled
        each project in projects
          if project.deleted !== true && project.visible == true && project.category == cat
            li(onclick='load_project("'+project._id+'", "'+cat+'")')= project.title
      #project-content
        if currentProject !== undefined
          p#project-title= currentProject.name
          p#project-description= currentProject.description
        else
          p#project-title
          p#project-description
