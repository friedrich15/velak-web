extends layout

block content

  nav#top-menu    
    ul.menu-list.list-inline
      li
        a#mobile-menu.notactive(onclick='showSideMenu()')
          img(src='/img/menu-icon-white.png')
      li.logo
        a(href='/', onclick='hideSideMenu()').pjax.logo-style velak
      li(class=(site=='gala'?'active':'')).li-menu
        a(href='/site/gala', onclick='hideSideMenu()').pjax.menu-link gala
      li(class=(site=='export'?'active':'')).li-menu
        a(href='/site/export', onclick='hideSideMenu()').pjax.menu-link export
      li(class=(site=='other'?'active':'')).li-menu
        a(href='/site/other', onclick='hideSideMenu()').pjax.menu-link other
  //- - var currentProject = 'hausi'
  main
    
    nav#side-menu
      ul.side-list.list-unstyled.mobile-hidden
        each project in projects
          
          li.li-side
            a(href='/site/'+site+'/'+project._id, onclick='hideSideMenu()').pjax.side-link= project.name
      p= 'velak-' +site
  #content
    
