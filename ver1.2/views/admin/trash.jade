extends layout

block content
  #content
    header
      nav.navbar.navbar-default
        .navbar-header
          button(type='button', class='navbar-toggle collapsed', data-toggle='collapse', data-target='#bs-example-navbar-collapse-1', aria-expanded='false')
            span(class='sr-only') Toggle navigation
            span(class='icon-bar')
          a(href='#').navbar-brand Home
        .collapse.navbar-collapse
          ul.nav.navbar-nav
            li
              a(href='/admin/projects').pjax Projects
            li
              a(href='/admin/docs').pjax Docs
            li.active
              a(href='/admin/trash').pjax.glyphicon.glyphicon-trash
    main.trash-style
      h1 TRASH
      p Click on projects or photos to retrieve them. Or remove them permanently by empting the trash.
      h2 projects
      
      if projects.length == 0
        p no deleted projects
      else
        a(href='/admin/empty_del_projects', onclick='return confirm("Are you sure you want to permanently remove those items?")').btn.btn-danger empty project trash
        .trash-container  
          ul.list-unstyled
            each project in projects
              li
                a(href='/admin/retrieve_project/'+project._id, onclick='return confirm("Do you want to retrieve this project?")')= project.name
      h2 photos
      if photos.length == 0
        p no deleted photos
      else
        a(href='/admin/empty_del_photos', onclick='return confirm("Are you sure you want to permanently remove those items?")').btn.btn-danger empty photo trash
        br
        .trash-container
          .grid
            each photo in photos
              if photo.originalName !== undefined  
                .grid-item
                  //- a(href='/uploads/' + image.name, download= image.originalName)
                  a(href='/admin/retrieve_photo/'+photo.inProject+'/'+photo._id, onclick='return confirm("Do you want to retrieve this photo?")')
                    img(src= '/uploads/small/small' + photo.name).image
                    p= photo.originalName
