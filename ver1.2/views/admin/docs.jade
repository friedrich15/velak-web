extends layout

block content
  if (!user)
    a(href="/admin/login") Login
    br
    a(href="/admin/register") Register
  if (user)
    header
      nav.navbar.navbar-default
        .navbar-header
          button(type='button', class='navbar-toggle collapsed', data-toggle='collapse', data-target='#bs-example-navbar-collapse-1', aria-expanded='false')
            span(class='sr-only') Toggle navigation
            span(class='icon-bar')
          a(href='#').navbar-brand Home
        .collapse.navbar-collapse
          ul.nav.navbar-nav
            li
              a(href='/admin/projects').pjax Projects
            li.active
              a(href='/admin/docs').pjax Docs
            li
              a(href='/admin/trash').pjax.glyphicon.glyphicon-trash
          .navbar-right
            a(href='/admin/users').navbar-text user list
            a(href='/admin/register').navbar-text add user          
            span.navbar-text logged in as #{user.username}
            a(href="/admin/logout").navbar-text
              span.glyphicon.glyphicon-log-out
    main
      .my-content
        h1 Documents
