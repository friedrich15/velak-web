extends layout

block content

  nav#top-menu    
    ul.menu-list.list-inline
      li
        a#mobile-menu.notactive(onclick='showSideMenu()')
          img(src='/img/menu-icon-white.png')
      li.logo
        a(href='/').pjax.logo-style velak
      li(class=(site=='gala'?'active':'')).li-menu
        a(href='/site/gala').pjax.menu-link velak-gala
      li(class=(site=='export'?'active':'')).li-menu
        a(href='/site/export').pjax.menu-link velak-export
      li(class=(site=='other'?'active':'')).li-menu
        a(href='/site/other').pjax.menu-link other
  //- - var currentProject = 'hausi'
  main
    
    nav#side-menu
      ul.side-list.list-unstyled.mobile-hidden
        each project in projects
          
          li.li-side
            a(href='/'+site+'/'+project._id).pjax.side-link= project.name
      p= 'velak-' +site
    #content
      p= currentProject.name
      p= currentProject.description
      each photo in currentProject.photo
        .img-container
          img(src= '/uploads/small/small' +photo.name, onerror="this.style.display='none'")
